{{#each results}}
  <div id="{{id}}" class="col s4 card-fixed">
	<div id="{{id}}" class="card hoverable">
	  <div class="card-image waves-effect waves-block waves-light">
	  	{{#if uid}}
	  	<a class="btn-floating halfway-fab waves-effect waves-light red">
	  	<i id="delete-{{id}}" class="material-icons delete-movie">delete</i>
	  	</a>
	  	{{/if}}
	    <img class="activator" src="https://image.tmdb.org/t/p/w500{{poster_path}}">
	  </div>
	  <div class="card-content">
	      <span class="card-title activator grey-text text-darken-4 truncate"><i class="material-icons more-info">info</i>{{title}}</span>
	      <p>Release Date: {{shorten-date release_date}}</p>
	  </div>
	  <div class="card-reveal">
	  	<span class="card-title grey-text text-darken-4">{{title}}<i class="material-icons right">close</i></span>
		<p>Year: {{shorten-date release_date}}</p>
		<br>
		<p>Plot:  {{overview}}</p>
		<article id="actor-reveal-{{id}}"></article>
	  </div>
	</div>
	{{#if uid}}
		<div>stars</div>
	{{else}}
		<button movieid="{{id}}" poster="{{poster_path}}" title="{{title}}" date="{{release_date}}" plot="{{overview}}" type="button" class="btn waves-effect waves-teal add-movie">Add to Watch List</button>
	{{/if}}
  </div>
{{/each}}